/* Container principal du kiosque */
.kiosk-container,
#kiosk-view .container {
    /* ÉTAPE 1: On rend le fond de base transparent */
    background-color: transparent; 
    border-radius: 12px;
    width: 100%;
    max-width: 600px;
    margin: 60px auto 20px auto;
    padding: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
    position: relative; /* On garde cette ligne, elle est essentielle */
    z-index: 1;
}

/* ÉTAPE 2: Le ::before gère maintenant le fond de base ET le dégradé */
.kiosk-container::before,
#kiosk-view .container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* On combine la couleur de fond et le dégradé en une seule propriété */
    background: 
        linear-gradient(to right, 
            rgba(255, 255, 255, 0.03), 
            rgba(255, 255, 255, 0.06), 
            rgba(255, 255, 255, 0.03)
        ),
        #1e1e1e; /* Ceci est votre couleur de fond de base */
    opacity: 1; /* L'opacité est gérée par les RGBA, on la met à 1 ici */
    z-index: -1; 
}

/* ÉTAPE 3: On garde la ligne lumineuse en haut, elle fonctionnera maintenant */
.kiosk-container::after,
#kiosk-view .container::after {
    content: '';
    position: absolute;
    top: 0; 
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 10px;
    background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(255, 255, 255, 0) 5%,
        rgba(255, 255, 255, 0.2) 15%,
        rgba(255, 255, 255, 0.4) 25%,
        rgba(255, 255, 255, 0.7) 40%,
        rgba(255, 255, 255, 1) 50%,
        rgba(255, 255, 255, 0.7) 60%,
        rgba(255, 255, 255, 0.4) 75%,
        rgba(255, 255, 255, 0.2) 85%,
        rgba(255, 255, 255, 0) 95%,
        transparent 100%
    );
    animation: luxuryPulse 4s ease-in-out infinite;
    filter: blur(3px);
    z-index: -1; 
}

