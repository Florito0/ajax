    display: flex;
    justify-content: center;
    gap: 15px;
}
.unified-confirmation-modal .modal-btn {
    padding: 10px 30px;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
