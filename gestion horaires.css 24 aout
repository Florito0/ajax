    top: 50%;
    left: calc(100% + 12px);
    transform: translateY(-50%);
    width: 280px;
    max-width: calc(100vw - 40px); /* Évite le débordement */
}

.tooltip.visible {
    display: block;
}

/* Flèche par défaut - pointe vers la gauche */
